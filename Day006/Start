using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Cal
{
    //사칙연산을 하는 계산기 만들기
    class Cal
    {
        //1. 멤버변수
        private string x;
        //2. 생성자
            //- 디폴트 생성자는 안 만들면 자동으로 만들어짐
            //- 단, 인자가 있는 생성자가 한 개라도 있으면 자동으로 만들어지지 않음
        public Cal()
        {

        }
        public Cal(string _x)
        {
            this.x = _x; //this.까지 생략 가능함
        }
        //3. 멤버 메소드
    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Cal cal1 = new Cal();
            Cal cal2 = new Cal("냠"); //객체생성 new를 사용할거면 생성자로 할당 / 디폴트 생성자 없으면 안댐~....
        }
    }
}
